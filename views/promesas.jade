extends layout

block content
    .container
        h3 Promesas AngularJS
    .row
        .col-md-2
        .col-md-8(ng-controller="PromesaController")
            h3 Servidor: {{server}}
            h3 Http: {{http}}
            br
            input.form-control(ng-model="word" name="word") 
        .col-md-2
    .container(ng-controller="ManyPromesaController")
        .col-md-
            button.btn(ng-click="accion(true)") Resolver Promesa
            br
        .col-md-6
            button.btn.btn-primary(ng-click="accion(false)") Rechazar Promesa
        h3 {{test}}
